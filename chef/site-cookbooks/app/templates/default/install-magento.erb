# Download magento
wget -P /tmp http://www.magentocommerce.com/downloads/assets/1.8.1.0/magento-1.8.1.0.tar.gz

# Unzip magento
tar -zxvf /tmp/magento-1.8.1.0.tar.gz -C <%= @params[:docroot].gsub("magento", "") %>

# Download sample data
wget -P /tmp http://www.magentocommerce.com/downloads/assets/1.6.1.0/magento-sample-data-1.6.1.0.tar.gz

# Unzip sample data
tar -zxvf /tmp/magento-sample-data-1.6.1.0.tar.gz -C /tmp

# Move sample data into correct location
mv /tmp/magento-sample-data-1.6.1.0/media/* <%= @params[:docroot] %>/media/

# Import sample data
mysql -u <%= @params[:db_user] %> -p<%= @params[:db_pass] %> <%= @params[:db_name] %> < /tmp/magento-sample-data-1.6.1.0/magento_sample_data_for_1.6.1.0.sql

# Set permissions
chmod -R o+w <%= @params[:docroot] %>/media <%= @params[:docroot] %>/var
chmod o+w <%= @params[:docroot] %>/var <%= @params[:docroot] %>/var/.htaccess <%= @params[:docroot] %>/app/etc

# Clean up
rm -rf /tmp/magento-sample-data-1.6.1.0/ /tmp/magento-1.8.1.0.tar.gz /tmp/magento-sample-data-1.6.1.0.tar.gz